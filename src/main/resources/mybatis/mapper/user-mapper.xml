    <insert id="insert" parameterType="com.newdeal.ledger.user.dto.UserDto" >
        INSERT INTO ymember (email, password, name, phone, address)
        VALUES (#{email}, #{password}, #{name}, #{phone}, #{address})
    </insert>

    <select id="existsByEmail" resultType="boolean" >
        SELECT IF(COUNT(*) = 1, 1, 0) FROM ymember WHERE email = #{email}
    </select>

    <select id="findByEmail" parameterType="String" resultType="com.newdeal.ledger.user.dto.UserDto">
        SELECT * FROM ymember WHERE email = #{email}
    </select>

